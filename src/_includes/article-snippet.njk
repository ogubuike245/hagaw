<article>
  <img src={{post.data.image}} alt={{post.data.imageAlt}}/>
  <h3>
    <a href={{post.url}}>
      {{ post.data.title }}
    </a>
  </h3>
  <p>by
    <span>{{post.data.author}}</span>
    on
    <span>{{post.data.date | postDate}}</span>
  </p>
  <p>{{post.data.description | truncate(50) }}</p>
  <a href={{post.url}} class="btn btn--primary">Continue Reading</a>
</article>